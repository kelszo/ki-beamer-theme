% INNER STYLING

\usepackage{tikz}
\usepackage{graphicx}
\usepackage{caption}
\captionsetup{labelsep=period}

\setbeamertemplate{itemize items}[circle]

\defbeamertemplate*{title page}{KI}[1][] 
{
  \setbeamertemplate{footline}{} 
  % Add kidarkplum background and white logo in top
  \begin{tikzpicture}[remember picture, overlay]
    \draw[fill=kidarkplum] (current page.south west) rectangle
    (current page.north east);
    \path (current page.north east) node[below left, inner sep=1em] {\includegraphics[width=.25\textwidth]{ki-logo-white.pdf}};
  \end{tikzpicture}%
  {\usebeamerfont{title}\inserttitle\par}
  {\usebeamerfont{subtitle}\usebeamercolor{subtitle}\insertsubtitle\par}
  \bigskip
  {\usebeamerfont{author}\insertauthor\par}
  {\usebeamerfont{institute}\insertinstitute\par}
  {\usebeamerfont{date}\insertdate\par}
  {\usebeamercolor{titlegraphic}\inserttitlegraphic}
}

\setbeamertemplate{endpage}{%
\setbeamertemplate{footline}{} 
    \begin{frame}
      \begin{tikzpicture}[remember picture, overlay]
        \draw[fill=kidarkplum] (current page.south west) rectangle
        (current page.north east);
        \path (current page.center) node[] {\includegraphics[width=0.5\textwidth]{ki-logo-white.pdf}};
      \end{tikzpicture}%
    \end{frame} 
}

